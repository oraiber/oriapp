<!DOCTYPE html>
<html>
  <head>
    <title>つぶやきの場</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left"><%= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>
            <div class="nav__right">
              <%= link_to "ログアウト", "#", method: :delete, class: :nav__logout %>
              <%= link_to "投稿する", "#", class: :nav__btn %>
            </div>
            <div class="nav__right">
              <%= link_to "ログイン", "#", class: :nav__btn %>
              <%= link_to "新規登録", "#", class: :nav__btn %>
            </div>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
